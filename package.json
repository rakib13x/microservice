{
  "name": "@./source",
  "version": "0.0.0",
  "scripts": {
    "dev": "npx nx run-many --target=serve --all --maxParallel=10",
    "user-ui": "npx nx run-many --target=dev --all --projects=user-ui",
    "seller-ui": "npx nx run-many --target=dev --all --projects=seller-ui",
    "admin-ui": "npx nx run-many --target=dev --all --projects=admin-ui",
    "kafka:up": "docker compose -f docker-compose.production.yml up kafka zookeeper -d",
    "kafka:down": "docker compose -f docker-compose.production.yml stop kafka zookeeper -d",
    "kafka:dev:up": "docker compose -f docker-compose.dev.yml up -d",
    "kafka:dev:down": "docker compose -f docker-compose.dev.yml down",
    "build": "npx nx run-many --target=build --all --parallel=3",
    "start:prod": "npx nx run-many --target=serve --projects=auth-service,product-service,order-service,seller-service,admin-service,api-gateway,kafka-service,logger-service,chatting-service,recommendation-service --parallel=10 & npm run ui:prod",
    "ui:prod": "npm run user-ui:prod & npm run seller-ui:prod & npm run admin-ui:prod",
    "user-ui:prod": "cd apps/user-ui && npx next start -p 3000",
    "seller-ui:prod": "cd apps/seller-ui && npx next start -p 3001",
    "admin-ui:prod": "cd apps/admin-ui && npx next start -p 3002",
    "docker:prod": "bash scripts/local-production.sh",
    "docker:build": "bash scripts/local-production.sh --build-only",
    "docker:run": "bash scripts/local-production.sh --run-only",
    "docker:stop": "bash scripts/local-production.sh --stop",
    "docker:clean": "bash scripts/local-production.sh --clean",
    "docker:logs": "bash scripts/local-production.sh --logs"
  },
  "private": true,
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "prisma": "^6.7.0",
    "tslib": "^2.6.0",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@nx/esbuild": "^20.6.1",
    "@nx/express": "^20.6.1",
    "@nx/jest": "^20.6.1",
    "@nx/js": "^20.6.1",
    "@nx/next": "^20.6.1",
    "@nx/node": "^20.6.1",
    "@nx/web": "^20.6.1",
    "@nx/webpack": "^20.6.1",
    "@nx/workspace": "^20.6.1",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.3.12",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@swc/jest": "~0.2.36",
    "@types/node": "~18.16.9",
    "@vercel/ncc": "^0.38.3",
    "autoprefixer": "10.4.13",
    "esbuild": "^0.19.2",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nx": "^20.6.1",
    "patch-package": "^8.0.0",
    "postcss": "8.4.38",
    "postinstall-postinstall": "^2.1.0",
    "tailwindcss": "3.4.3",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "webpack-cli": "^5.1.4"
  }
}
